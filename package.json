{
    "name": "local-ai-chatbot",
    "version": "1.0.0",
    "description": "Privacy-focused local AI chatbot desktop application",
    "main": "electron/main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "build": "electron-builder",
        "build:win": "electron-builder --win"
    },
    "keywords": [
        "ai",
        "chatbot",
        "electron",
        "ollama",
        "desktop-app"
    ],
    "author": "Your Name",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "dependencies": {
        "axios": "^1.6.2"
    },
    "build": {
        "appId": "com.localai.chatbot",
        "productName": "Local AI Chatbot",
        "directories": {
            "output": "dist"
        },
        "files": [
            "electron/**/*",
            "frontend/**/*",
            "backend/**/*"
        ],
        "win": {
            "target": "nsis",
            "icon": "build/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    }
}